{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ES5",
    "lib": ["DOM", "ES6"],
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "jsx": "react",
    "typeRoots": ["index.d.ts", "node_modules/@types"]
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules"]
}
